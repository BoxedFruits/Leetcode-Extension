{
  "name": "Leetcode Alarm",
  "version": "1.0",
  "description": "Extension that automatically begins when you start a question on Leetcode to emulate the time constraints in a technical interview",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "alarms",
    "notifications",
    "webNavigation",
    "tabs",
    "*://statsd-frontend.leetcode.com/*",
    "https://leetcode.com/problems/*",
    "https://leetcode.com/problems/*/submissions/",
    "webRequest"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Timer",
    "default_icon": {
      "16": "images/LeetCode_logo16.png",
      "32": "images/LeetCode_logo32.png",
      "48": "images/LeetCode_logo48.png",
      "128": "images/LeetCode_logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "getDifficulty.js"
      ]
    }
  ],
  "icons": {
    "16": "images/LeetCode_logo16.png",
    "32": "images/LeetCode_logo32.png",
    "48": "images/LeetCode_logo48.png",
    "128": "images/LeetCode_logo128.png"
  },
  "manifest_version": 2
}